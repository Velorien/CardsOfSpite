@using CardsOfSpite.Models.Dto
@inject HttpClient Http
@inject NavigationManager Navigation

<div class="configuration box">
    <h2>Configuration</h2>
    <EditForm Model="Settings">
        <label>Min players</label>
        <InputNumber @bind-Value="Settings.MinPlayers" min="3" max="20" />
        <label>Max players</label>
        <InputNumber @bind-Value="Settings.MaxPlayers" min="3" max="20" />
        <label>Points to win</label>
        <InputNumber @bind-Value="Settings.PointsToWin" min="1" max="100" />
        <label>Allow discard</label>
        <InputCheckbox @bind-Value="Settings.AllowDiscard" />
        <hr />
        <button @onclick="StartGame">Start game</button>
        @if (_error)
        {
            <p>Game creation failed!</p>
        }
    </EditForm>
</div>

@code {
    bool _error;
    [Parameter] public Models.GameSettings Settings { get; set; } = null!;

    async Task StartGame()
    {
        _error = false;
        var response = await Http.PostAsJsonAsync("/api/game",
            new GameCreationRequest(
                Settings.DeckIds,
                Settings.MinPlayers,
                Settings.MaxPlayers,
                Settings.PointsToWin,
                Settings.AllowDiscard));

        if (response.IsSuccessStatusCode)
        {
            var gameInfo = await response.Content.ReadFromJsonAsync<GameCreationResponse>();
            Navigation.NavigateTo("/game/" + gameInfo!.GameId);
        }
        else _error = true;
    }
}
